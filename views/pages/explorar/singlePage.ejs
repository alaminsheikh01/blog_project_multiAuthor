<%- include('../../partials/head.ejs')  %> 


<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">

        <div class="card card-body">
            <section>
                <h3><%= post.title %> </h3>

                <div class="d-flex">
                    <small>
                        <%= moment(post.createdAt) %>,
                         Posted By <a href="/author/<%= post.author._id %>"><%= post.author.username %></a>  ,
                         <%= post.readTime %> 
                    </small>
                    <% if(user) {%>
                        <span class="ml-auto bookmark" data-post="<%= post._id %> ">
                           <% if (bookmarks.includes(post._id)) {%>
                            <i class="fas fa-bookmark"></i>
                           <% } else{%>
                            <i class="far fa-bookmark"></i>
                           <% } %>   
                        </span>
                    <% } %>  
                </div>
                

                <% if (post.thumbnail) {%>
                    <img src="<%= post.thumbnail %> " class="img-fluid my-2" alt="">
                <% } %>  
                <section>
                    <%- post.body %> 
                </section>

               <div class="mt-5"></div>
                <% if(!user) {%>

                    <button class="btn btn-success btn-sm" disabled>
                        Like (<%= post.likes.length %> )
                    </button>
                    <button class="btn btn-danger btn-sm" disabled>
                        Dislike (<%= post.dislikes.length %> )
                    </button>
                    <p class="text-center text-muted mt-5">To Like And Comment Please 
                        <a href="/auth/login">Login</a>
                    </p>

                <% } else {%>

                    <button class="btn btn-success btn-sm" id="likeBtn" data-post="<%= post._id %> ">
                        <%= post.likes.includes(user._id) ? 'Liked' : 'Like' %> ( <%= post.likes.length %> ) 
                    </button>

                    <button class="btn btn-danger btn-sm" id="dislikeBtn" data-post="<%= post._id %> ">
                        <%= post.dislikes.includes(user._id) ? 'Disliked' : 'Dislike' %> ( <%= post.dislikes.length %> ) 
                    </button>

                    <div class="mt-5">
                        <label for="comment">Leave A Comment</label>
                        <input type="text" class="form-control" id="comment"
                        placeholder="Press Enter to Submit" data-post="<%= post._id %> ">
                    </div>
                    <div class="mt-5" id="comment-holder">
                        <% if (post.comments.length == 0 ) { %>
                            <p class="text-muted text-center">There is No Comment</p>
                        <% } else { %>
                            <% for (let comment of post.comments.reverse()) {%>
                                <div class="media border">
                                    <img src="<%= comment.user.profilePics %>" 
                                    class="rounded-circle mx-3 my-3"
                                    style="width: 40px;" alt="">
                                    <div class="media-body my-3">
                                        <p><%= comment.body %> </p>
                                        <div name="replies">
                                            <% if(comment.replies.length > 0 ) {%>
                                                <% for(let reply of comment.replies) { %>
                                                    <div class="media mt-3">
                                                        <img src="<%= reply.user.profilePics %>" 
                                                        class="align-self-start mr-3 rounded-circle" 
                                                        style="width: 40px;" alt="">
                                                        <div class="media-body">
                                                            <p><%= reply.body %> </p>
                                                        </div>
                                                    </div>
                                                <% } %>  
                                            <% } %>  
                                        </div>

                                        <div class="my-3">
                                            <input type="text" class="form-control"  name="reply"
                                            placeholder="Press Enter to Reply" data-comment="<%= comment._id %> ">
                                        </div>
                                    </div>
                                </div>
                            <% } %>  
                        <% } %>   
                    </div>

                <% } %>   
            </section>
        </div>
 
        </div>
    </div>
</div>


<%- include('../../partials/footer.ejs') %> 
<script src="/scripts/main.js"></script> 
